<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.brycehan.boot.system.mapper.SysOperationLogMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.brycehan.boot.system.entity.SysOperationLog">
        <id column="id" property="id" />
        <result column="title" property="title" />
        <result column="business_type" property="businessType" />
        <result column="method" property="method" />
        <result column="request_method" property="requestMethod" />
        <result column="operator_type" property="operatorType" />
        <result column="operation_user_id" property="operationUserId" />
        <result column="operation_username" property="operationUsername" />
        <result column="dept_name" property="deptName" />
        <result column="operation_url" property="operationUrl" />
        <result column="operation_ip" property="operationIp" />
        <result column="operation_location" property="operationLocation" />
        <result column="operation_param" property="operationParam" />
        <result column="operation_time" property="operationTime" />
        <result column="duration" property="duration" />
        <result column="operation_status" property="operationStatus" />
        <result column="json_result" property="jsonResult" />
        <result column="error_message" property="errorMessage" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, title, business_type, method, request_method, operator_type, operation_user_id, operation_username, dept_name, operation_url, operation_ip, operation_location, operation_param, operation_time, duration, operation_status, json_result, error_message
    </sql>

    <!-- 分页查询 -->
    <select id="page" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from brc_sys_operation_log
    </select>
</mapper>
