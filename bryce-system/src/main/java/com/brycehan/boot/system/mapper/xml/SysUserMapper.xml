<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.brycehan.boot.system.mapper.SysUserMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.brycehan.boot.system.entity.SysUser">
        <id column="id" property="id"/>
        <result column="username" property="username"/>
        <result column="password" property="password"/>
        <result column="full_name" property="fullName"/>
        <result column="avatar" property="avatar"/>
        <result column="gender" property="gender"/>
        <result column="user_type" property="userType"/>
        <result column="dept_id" property="deptId"/>
        <result column="phone" property="phone"/>
        <result column="email" property="email"/>
        <result column="account_non_locked" property="accountNonLocked"/>
        <result column="last_login_ip" property="lastLoginIp"/>
        <result column="last_login_time" property="lastLoginTime"/>
        <result column="sort" property="sort"/>
        <result column="status" property="status"/>
        <result column="delete_flag" property="deleteFlag"/>
        <result column="create_user_id" property="createUserId"/>
        <result column="create_username" property="createUsername"/>
        <result column="create_time" property="createTime"/>
        <result column="update_user_id" property="updateUserId"/>
        <result column="update_time" property="updateTime"/>
        <result column="remark" property="remark"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id
        , username, password, full_name, avatar, gender, user_type, dept_id, phone, email, account_non_locked,
        last_login_ip, last_login_time, sort, status, delete_flag, create_user_id, create_username, create_time,
        update_user_id, update_time, remark
    </sql>

    <!-- 分页查询 -->
    <select id="page" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from brc_sys_user
    </select>

</mapper>
