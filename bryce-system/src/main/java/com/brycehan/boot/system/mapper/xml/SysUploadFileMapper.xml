<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.brycehan.boot.system.mapper.SysUploadFileMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.brycehan.boot.system.entity.SysUploadFile">
        <id column="id" property="id"/>
        <result column="old_name" property="oldName"/>
        <result column="new_path" property="newPath"/>
        <result column="file_type" property="fileType"/>
        <result column="suffix" property="suffix"/>
        <result column="hash" property="hash"/>
        <result column="size" property="size"/>
        <result column="width" property="width"/>
        <result column="height" property="height"/>
        <result column="lat" property="lat"/>
        <result column="lng" property="lng"/>
        <result column="tags" property="tags"/>
        <result column="sort" property="sort"/>
        <result column="version" property="version"/>
        <result column="create_user_id" property="createUserId"/>
        <result column="create_username" property="createUsername"/>
        <result column="create_time" property="createTime"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id
        , old_name, new_path, file_type, suffix, hash, size, width, height, lat, lng, tags, sort, version,
        create_user_id, create_username, create_time
    </sql>

    <!-- 分页查询 -->
    <select id="page" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from brc_sys_upload_file
    </select>
</mapper>
